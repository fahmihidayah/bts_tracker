<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mapsandroid"
    android:orientation="vertical"
    tools:context=".TrackingActivity" >

    <Button
        android:id="@+id/buttonTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tracking" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="35dp"
        android:onClick="onClickTracking"/>

    <Button
        android:id="@+id/buttonBts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:onClick="onClickBts"
        android:text="BTS"
        android:textSize="35dp" />

    <Button
        android:id="@+id/buttonDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="35dp"
        android:onClick="onClickDemo"/>

</LinearLayout>